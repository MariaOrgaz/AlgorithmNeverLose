{% extends '::base.html.twig' %}

{% block body %}
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Gr√°fica </h5>
                    </div>
                    <div id="container" style="position: relative;"></div>
                    <div id="container" style="height: 400px; min-width: 310px"></div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">

        $.getJSON('https://cdn.rawgit.com/highcharts/highcharts/v6.0.4/samples/data/new-intraday.json', function (data) {

            // create the chart
            Highcharts.stockChart('container', {
                title: {
                    text: 'IBEX 35 stock price by minute'
                },

                rangeSelector: {
                    allButtonsEnabled: true,
                    buttons: [{
                        type: 'minute',
                        count: 20,
                        text: '1M',
                        dataGrouping: {
                            forced: true,
                            units: [['minute', [1]]]
                        }
                    }, {
                        type: 'minute',
                        count: 10,
                        text: '5M',
                        dataGrouping: {
                            forced: true,
                            units: [['minute', [5]]]
                        }
                    }, {
                        type: 'minute',
                        count: 10,
                        text: '15M',
                        dataGrouping: {
                            forced: true,
                            units: [['minute', [15]]]
                        }
                    }, {
                        type: 'minute',
                        count: 10,
                        text: '30M',
                        dataGrouping: {
                            forced: true,
                            units: [['minute', [30]]]
                        }
                    }, {
                        type: 'hour',
                        count: 20,
                        text: 'Hour',
                        dataGrouping: {
                            forced: true,
                            units: [['hour', [1]]]
                        }
                    }, {
                        type: 'day',
                        count: 10,
                        text: 'Day',
                        dataGrouping: {
                            forced: true,
                            units: [['day', [1]]]
                        }
                    }, {
                        type: 'week',
                        count: 4,
                        text: 'Week',
                        dataGrouping: {
                            forced: true,
                            units: [['week', [1]]]
                        }
                    }, {
                        type: 'month',
                        text: 'Month',
                        dataGrouping: {
                            forced: true,
                            units: [['month', [1, 3, 6]]]
                        }
                    }],
                    buttonTheme: {
                        width: 60
                    },
                    selected: 0
                },

                xAxis: {
                    type: 'datetime',
                    tickPixelInterval: 150,
                    maxZoom: 20 * 1000
                },

                series: [{
                    name: 'IBEX 35',
                    type: 'candlestick',
                    data: data,
                    tooltip: {
                        valueDecimals: 2
                    }
                }]
            });
        });
    </script>

{% endblock %}
